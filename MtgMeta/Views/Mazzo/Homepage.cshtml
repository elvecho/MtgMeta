@using MtgMeta.Models
@model List<Mazzo>

@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/css/StyleSheet.css">
    <title>hello world</title>
</head>
<body>
    <div>

    </div>
<div class="p-5 mb-2 bg-danger text-dark">
    <header class= "text-center">
        <h1>Mtg meta Pauper</h1>
        <p>mazzi con più winRate</p>
        </header>
</div>
   

<div>
    <h1 class="text-center">liste Mazzi</h1>
    <a class=" btn btn-primary "
    href= "@Url.Action("Create", "Mazzo")">
    aggiungi il tuo Mazzo 
</a>
</div>

<div>

 <a class=" btn btn-primary "
    href= "@Url.Action("GetCarte", "Carta")">   @* nome del metodo + il nome del controller/cartella*@
    databasecarte </a>
</div>





 @if( Model.Count() == 0)
    {
        <h3> non ci sono Mazzi presenti</h3>
    }
    else
    {
         <div class="container-fluid text-center " >
        
        <div class="row p-5 text-center">

        @foreach(Mazzo MazzoNellaLista in Model)
        {
            
          <div class="col-sm-4">
            <div class="card mx-auto container-fluid" style="width: 100%; height:100% ">
                
                <img class="image container-fluid card-img-top" src="@MazzoNellaLista.Image"  alt="immagine">
                <div class= "card-body">
                  <h5 class="card-title"> @MazzoNellaLista.Name</h5>
                  @*<p class="card-text">@MazzoNellaLista.</p>*@
                  <p class="card-text">meta: @MazzoNellaLista.PercentualeMeta %</p>
                  
                  <a class = "btn btn-info" href="/Mazzo/Details/@MazzoNellaLista.MazzoId"> dettagli</a>
                  <a class = "btn btn-warning" href="/Mazzo/Update/@MazzoNellaLista.MazzoId"> modifica</a>
                   <form asp-controller= "Mazzo" asp-action="Delete" asp-route-id =@MazzoNellaLista.MazzoId method="post">
                       @Html.AntiForgeryToken()
                       <button type="submit" class ="btn btn-danger ">elimina</button>
                   </form>
                    
                </div>
              </div>
          </div>
        }
        </div>
          </div>
    }
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script type="text/javascript" src="main.js"></script>

</body>
</html>
