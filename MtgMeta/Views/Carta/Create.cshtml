<div class ="container">
	<div class="row">
<div class ="col 12">
	<h1 class ="mt-3 mb-3 "> Nuovo Mazzo</h1>


<form method ="post" action= "@Url.Action("Create", "Mazzo" )">
	@Html.AntiForgeryToken()
	<div class = "mb-3 ">
		immagine:
		<input asp-for = "Image" class=" d-block w-100" />
		<span asp-validation-for = "Image" class = "text-danger "></span>

	</div>
	<div class = "mb-3 ">
		nome:
		<input asp-for = "Name" class=" d-block w-100" />
		<span asp-validation-for = "Name" class = "text-danger"></span>
</div>


<div class = "mb-3 ">
		percentuale:
		<textarea asp-for = "PercentualeMeta" class=" d-block w-100"></textarea>
		<span asp-validation-for = "PercentualeMeta" class = "text-danger"></span>
		</div>

		<div class = "text-end">
			<input type="submit" class="btn btn-primary " value = "salva">
		</div>
</form>


</div>
</div>
</div>
